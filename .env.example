# =============================================================================

# SendGrid API Key (per notifiche email)
# Ottieni da: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxx

# =============================================================================
# üì± COMUNICAZIONI AVANZATE (OPZIONALI)
# =============================================================================

# Twilio (WhatsApp Business + SMS)
# Ottieni da: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxx

# =============================================================================
# üê≥ DOCKER DEPLOYMENT OPTIONS
# =============================================================================

# Salta setup dati demo (true/false)
SKIP_DEMO=false

# Auto-migrazione database (true/false)
AUTO_MIGRATE=true

# Ambiente di esecuzione
NODE_ENV=production

# Porta applicazione
PORT=5000

# =============================================================================
